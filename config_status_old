# i3status configuration file.
# see "man i3status" for documentation.

general {
    colors = true
    interval = 5
}

order += "wireless _first_"
order += "load"
order += "ethernet _first_"
order += "battery 0"
order += "volume master"
order += "tztime local"

wireless _first_ {
    format_up = "WLAN: %quality in %essid (%ip)"
    format_down = "W: down"
}

ethernet _first_ {
# if you use %speed, i3status requires root privileges
    format_up = "E: %ip (%speed)"
    format_down = ""
}

load {
    format = "%1min"
}

battery 0 {
    format = "%status %percentage %remaining"
    format_down = "WTF, WO IST DER AKKU???"
    status_chr = "âš¡"
    status_bat = "ðŸ”‹"
    status_full = "âœ”"
}

volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: lautlos (%volume)"
        device = "pulse:0"
}

tztime local {
    format = "%d.%m.%Y, %H:%M:%S"
}
